{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@types/node",
      "@nuxtjs/axios",
      "@nuxt/image",
      "@nuxtjs/auth-next",
      "axios",
      "@nuxtjs/i18n"
    ],
    "skipLibCheck": true // skip checking all .d.ts files for types
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
